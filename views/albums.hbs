<h2>{{#with albums as |album|}}
    Albums for : {{album.[0].artists.[0].name}}
    {{/with}}
</h2>

<div class="row row-cols-3 g-4">
    <div class="col">
        <div class="card">
            {{#each albums}}
            <div class="card-body"></div>
                <img src="{{this.images.[0].url}}" class="card-img-top" style="width:15 ;">
                <h5 class="card-title">{{this.name}}</h5>
                <h5 class="card-title">{{this.cover}}</h5>
                <a href="/tracks/{{this.id}}" class="btn btn-primary">See the tracks</a>
            </div>
            {{/each}}
        </div>
    </div>
</div>